# Environment Configuration for Livestock Monitoring System
# Production-ready configuration with database and caching

# Node Environment
NODE_ENV=development

# API Server Configuration
PORT=3001
API_PORT=3001

# Web Dashboard Configuration  
WEB_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:${API_PORT}

# Database Configuration (PostgreSQL with TimescaleDB)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=livestock_monitoring
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_SIZE=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=10000
DB_QUERY_TIMEOUT=30000

# Redis Configuration (Caching and Rate Limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_TTL=300000

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_DAILY_MAX=5000

# CORS Configuration (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:3002,http://localhost:5173

# Swagger Documentation
ENABLE_SWAGGER=true

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_QUERY_LOGGING=false
ENABLE_PERFORMANCE_MONITORING=true

# Docker Compose Configuration
# Set these for production deployment
COMPOSE_PROJECT_NAME=livestock_monitoring
