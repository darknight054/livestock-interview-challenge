    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4",
    "@aws-sdk/client-dynamodb": "^3.450.0",
    "@aws-sdk/lib-dynamodb": "^3.450.0",
    "aws-cdk-lib": "^2.110.0",
    "constructs": "^10.3.0",
    "express": "^4.18.2",
    "@types/express": "^4.17.21",
    "cors": "^2.8.5",
    "@types/cors": "^2.8.17",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
