{
  "name": "livestock-health-platform",
  "version": "1.0.0",
  "description": "Smart Livestock Health & Financial Risk Assessment Platform - Interview Challenge",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean",
